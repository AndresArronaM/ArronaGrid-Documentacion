-let title = "ArronaGrid - Estilos Base"
-let type = "website"
-let descripcion = "Libreria sass para la maquetacion de sitios web"
-let url = "/Base.html"
-let imagen = "/Img/ArronaGrid.svg"
-let site_name = "ArronaGrid"
-let locale = "es_MX"
-let card = "summary_large_image"
-let twitter = ""

include ../Components/Metadatos
body
    include ../Components/Header
    main.main-config
        mixin Botones
            div.btn-content
                a.btn.btn-nav(href="Views/Personalizacion.html")
                    img.btn-nav-arrow(src="Img/Arrow_Left.svg", alt="")
                    p.btn-nav-ocultar Anterior
                a.btn.btn-nav(href="Views/Documentacion.html")
                    img.btn-nav-home(src="Img/Home.svg", alt="")
                    p.btn-nav-ocultar Volver al menu
                a.btn.btn-nav(href="Views/Breackpoints.html")
                    img.btn-nav-arrow(src="Img/Arrow_Right.svg", alt="")
                    p.btn-nav-ocultar Siguiente
        +Botones()
        section
            header
                h2.main-config-title Estilos Base
            p Estilos base para normalizar algunos elemntos HTML
            include:markdown-it ../../MD/Base/Base.md
        +Botones()
    include ../Components/Footer
